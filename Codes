#include <iostream>
#include <conio.h>
using namespace std;

int main()
{
    int month, day, year;
    cout << "Enter the Month: ";
    cin >> month;
    cout << "Enter the Day: ";
    cin >> day;
    cout << "Enter the Year: ";
    cin >> year;

    cout << "Your Birthdate is: ";

if(month == 1 && day <= 31){
        cout << "January " << day << "," <<" " << year;
    }  else if (month == 1 && day >> 31){
        cout << "Invalid ";
    } else if (month == 2 && day <= 28){
        cout << "Febuary " << day << "," << " " << year;
    } else if (month == 2 && day >> 28){
        cout << "Invalid ";
    } else if (month == 3 && day <= 31){
        cout << "March " << day << "," << " " << year;
    } else if (month == 3 && day >> 31){
        cout << "Invalid ";
    } else if (month == 4 && day <= 30){
        cout << "April " << day << "," << " " << year;
    } else if (month == 4 && day >> 30){
        cout << "Invalid ";
    } else if (month == 5 && day <= 31){
        cout << "May " << day << "," << " " << year;
    } else if (month == 5 && day >> 31){
        cout << "Invalid ";
    } else if (month == 6 && day <= 30){
        cout << "June " << day << "," << " " << year;
    } else if (month == 6 && day >> 30){
        cout << "Invalid ";
    } else if (month == 7 && day <= 31){
        cout << "July " << day << "," << " " << year;
    } else if (month == 7 && day >> 31){
        cout << "Invalid ";
    } else if (month == 8 && day >> 31){
        cout << "August " << day << "," << " " << year;
    } else if (month == 8 && day >> 31){
        cout << "Invalid ";
    } else if (month == 9 && day >> 30){
        cout << "September " << day << "," << " " << year;
    } else if (month == 9 && day >> 30){
        cout << "Invalid ";
    } else if (month == 10 && day >> 31){
        cout << "October " << day << "," << " " << year;
    } else if (month == 10 && day >> 31){
        cout << "Invalid ";
    } else if (month == 11 && day >> 30){
        cout << "November " << day << "," << " " << year;
    } else if (month == 11 && day >> 30){
        cout << "Invalid ";
    } else if (month == 12 && day >> 31){
        cout << "December " << day << "," << " " << year;
    } else if (month == 12 && day >> 31){
        cout << "Invalid ";
    } else if (month << 12){
        cout << "Invalid ";
    }


    _getch();
    return 0;
}
